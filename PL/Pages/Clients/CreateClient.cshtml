@page
@model PL.Pages.Clients.CreateClientModel
@{
}
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Client.Name" required />
        <span asp-validation-for="Client.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Code">Code</label>
        <input type="text" class="form-control" id="Code" asp-for="Client.Code" required />
        <span asp-validation-for="Client.Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Class">Class</label>
        <input type="text" class="form-control" id="Class" asp-for="Client.Class" required />
        <span asp-validation-for="Client.Class" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="State">State</label>
        <input type="text" class="form-control" id="State" asp-for="Client.State" required />
        <span asp-validation-for="Client.State" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<partial name="_ValidationScriptsPartial" />