@page
@model PL.Pages.Clients.GetAllClientsWithPagingModel
@{
}


<h1>Clients</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>State</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Class</td>
                <td>@client.State</td>
                <td>
                    <a asp-page="ClientDetails" asp-route-id="@client.Id" class="btn btn-info">Details</a>
                    <a asp-page="UpdateClient" asp-route-id="@client.Id" asp-route-pageNumber="@Model.CurrentPage" class="btn btn-secondary">Edit</a>
                    <a asp-page="DeleteClient" asp-route-id="@client.Id" asp-route-pageNumber="@Model.CurrentPage" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    Page @(Model.CurrentPage) of @(Model.TotalPages)
    <div>
        @if (Model.CurrentPage > 1)
        {
            <a asp-page="/Clients/Index" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a asp-page="/Clients/Index" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
        }
    </div>
</div>

