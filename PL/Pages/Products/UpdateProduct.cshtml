@page
@model PL.Pages.Products.updateProductModel
@{
}
<h1>Edit Client</h1>

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Product.Name" required />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" id="Description" asp-for="Product.Description" required />
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="checkbox" class="form-control small-checkbox" id="IsActive" asp-for="Product.IsActive" required />
        <span asp-validation-for="Product.IsActive" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<partial name="_ValidationScriptsPartial" />