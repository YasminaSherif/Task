@page
@model PL.Pages.Products.UpdateProductModel
@{
}

<h1>Edit Product</h1>

<form method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" asp-for="product.Name" required />
        <span asp-validation-for="product.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Class">Class</label>
        <input type="text" class="form-control" id="Class" asp-for="product.Description" required />
        <span asp-validation-for="product.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="State">State</label>
        <input type="text" class="form-control" id="State" asp-for="product.IsActive" required />
        <span asp-validation-for="product.IsActive" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<partial name="_ValidationScriptsPartial" />
