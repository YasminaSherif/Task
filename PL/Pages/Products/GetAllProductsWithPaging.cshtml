@page
@model PL.Pages.Products.GetAllProductsWithPagingModel
@{
}

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>IsActive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.IsActive</td>
                <td>
                    <a asp-page="ProductDetails" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                    <a asp-page="UpdateProduct" asp-route-id="@product.Id" asp-route-pageNumber="@Model.CurrentPage" class="btn btn-secondary">Edit</a>
                    <a asp-page="DeleteProduct" asp-route-id="@product.Id" asp-route-pageNumber="@Model.CurrentPage" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    Page @(Model.CurrentPage) of @(Model.TotalPages)
    <div>
        @if (Model.CurrentPage > 1)
        {
            <a asp-page="./GetAllProductsWithPaging" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a asp-page="./GetAllProductsWithPaging" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
        }
    </div>
</div>
