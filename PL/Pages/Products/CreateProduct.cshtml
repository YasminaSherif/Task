@page
@model PL.Pages.Products.CreateProductModel
@{
}

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" asp-for="product.Name" required />
        <span asp-validation-for="product.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Code">Code</label>
        <input type="text" class="form-control" id="Code" asp-for="product.Description" required />
        <span asp-validation-for="product.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Class">Class</label>
        <input type="checkbox" class="form-control" id="Class" asp-for="product.Description" required />
        <span asp-validation-for="product.IsActive" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<partial name="_ValidationScriptsPartial" />
