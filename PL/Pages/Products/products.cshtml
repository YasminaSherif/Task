@page
@model PL.Pages.Products.productsModel
@{
}

<div class="container">
<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/images/1.jpg" alt="Create Product">
            <div class="card-body text-center">
                <h5 class="card-title">Create product</h5>
                <p class="card-text">Add a new Product to the system.</p>
                <a href="CreateProduct" class="btn btn-primary">Create</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/images/2.jpg" alt="Get All Products">
            <div class="card-body text-center">
                <h5 class="card-title">Get All Products</h5>
                <p class="card-text">View all Products in the system. aslo you can Edit and Delete</p>
                <a href="GetAllProducts" class="btn btn-primary">Get All</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/images/3.jpg" alt="Get All Products with Paging">
            <div class="card-body text-center">
                <h5 class="card-title">Products with Paging</h5>
                <p class="card-text">View Products with pagination.</p>
                <a href="GetAllProductsWithPaging" class="btn btn-primary">Get All with Paging</a>
            </div>
        </div>
    </div>
</div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        margin: 20px;
    }

    .card-img-top {
        height: 180px;
        object-fit: cover;
    }
</style>
