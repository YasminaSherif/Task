@page
@model PL.Pages.Products.deleteProductModel
@{
}
<h1>Delete Product</h1>

<h3>Are you sure you want to delete this Product?</h3>

@if (ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<div>
    <h4>@Model.product.Name</h4>
    <p>Description: @Model.product.Description</p>
    <p>IsActive: @Model.product.IsActive</p>
</div>

<form method="post">
    <input type="hidden" asp-for="product.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="GetAllProducts" class="btn btn-secondary">Cancel</a>
</form>
